{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnimationCommand",
  "description": "Schema for animation commands produced by the animation generator (Llama/Groq) and consumed by the client.",
  "type": "object",
  "properties": {
    "source": { "type": "string" },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target": { "type": "string", "description": "DOM id of the target entity in the scene" },
          "type": { "type": "string", "enum": ["speak", "gesture", "emotion", "idle"] },
          "visemes": {
            "type": "array",
            "items": { "type": "object", "properties": { "v": { "type": "string" }, "t": { "type": "integer" } }, "required": ["v", "t"] }
          },
          "audioUrl": { "type": "string" },
          "name": { "type": "string" },
          "emotion": { "type": "string" },
          "start": { "type": "integer" },
          "duration": { "type": "integer" }
        },
        "required": ["target", "type"]
      }
    },
    "original": {}
  },
  "required": ["commands"]
}
